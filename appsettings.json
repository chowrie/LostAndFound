{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=App.db"
  },
  // 使用QQ邮箱的SMTP服务器
  "EmailSettings": {
    "SmtpServer": "smtp.qq.com",
    "SmtpPort": 587,
    "SmtpUsername": "your_email@qq.com", // 邮箱地址
    "SmtpPassword": "your_smtp_authorization_code" // 授权码
  }
}
